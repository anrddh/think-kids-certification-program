div(ng-include='"components/navbar/navbar.html"')
.container
  h1 {{message.subject}}
  div {{message.body}}
  div(ng-show='message.attachment')
    a(href='https://think-kids-cert-uploads.s3.amazonaws.com/' + '{{message.attachment}}') {{ message.attachment }}
  br
  br
  hr
  h4 Reply
  form.form(name='messageForm', ng-submit='sendMessage()')
    .form-group
      textarea.form-control(name='body', ng-model='message.reply', required)
    div
      button.btn.btn-inverse.btn-lg.btn-login(type='submit')
        | Reply
